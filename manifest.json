{
  "manifest_version": 2,
  "name": "Tumblr-Chrome Extension",
  "description": "use this extension to easily post to tumblr without having to leave your current web page",
  "version": "1.0",
  "icons": { "16": "icon16.png",
    "128": "icon128.png" },

  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "index.html",
    "default_title": "Click here"
  },
  
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
  {
    "matches": [
      "*://*/*"
      ],
    "css": [
      "styles.css"
      ]
  }
  ]
}
